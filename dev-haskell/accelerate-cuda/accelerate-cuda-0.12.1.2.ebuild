		>=dev-haskell/fclabels-1.0[profile?]
		>=dev-haskell/hashable-1.1[profile?]
		>=dev-haskell/hashtables-1.0.1[profile?]
		>=dev-haskell/language-c-quote-0.4[profile?]
		>=dev-haskell/mainland-pretty-0.2[profile?]
