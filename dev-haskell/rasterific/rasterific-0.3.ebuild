DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.16.0
	test? ( dev-haskell/binary
		>=dev-haskell/criterion-0.8 <dev-haskell/criterion-0.9
		>=dev-haskell/quickcheck-2.7
		>=dev-haskell/statistics-0.10 <dev-haskell/statistics-0.11 )
