LICENSE="BSD"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE=""

RDEPEND="<dev-haskell/blaze-builder-0.4
		dev-haskell/dataenc
		>dev-haskell/haxml-1.20
		>=dev-haskell/http-4000
		dev-haskell/mtl
		<dev-haskell/network-3
		dev-haskell/time
		dev-haskell/utf8-string
		>=dev-lang/ghc-6.8.2"
