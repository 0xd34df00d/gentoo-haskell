src_prepare() {
	cd "${S}"
	sed -e 's@HaXml == 1.20.\*@HaXml >= 1.20 \&\& < 1.23@' \
		-i "${S}/${PN}.cabal" || die "Could not loosen HaXml dependency in ${S}/${PN}.cabal"
	if has_version ">=dev-haskell/haxml-1.22.0"; then
		epatch "${FILESDIR}/${P}-haxml-1.22.patch"
	fi
}
