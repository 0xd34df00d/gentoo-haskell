MY_PN="IOSpec"
MY_P="${MY_PN}-${PV}"

DESCRIPTION="A pure specification of the IO monad."
HOMEPAGE="http://www.cs.nott.ac.uk/~wss/repos/IOSpec"
SRC_URI="http://hackage.haskell.org/packages/archive/${MY_PN}/${PV}/${MY_P}.tar.gz"

LICENSE="BSD"
SLOT="0"
KEYWORDS="~amd64 ~x86"
IUSE=""

