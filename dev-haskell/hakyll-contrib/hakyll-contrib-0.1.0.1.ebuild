RDEPEND=">=app-text/pandoc-1.6[profile?]
		<app-text/pandoc-2[profile?]
		>=dev-haskell/hakyll-3.2.0.3[profile?]
		<dev-haskell/hakyll-3.5[profile?]
		>=dev-lang/ghc-6.10.1"
DEPEND="${RDEPEND}
		>=dev-haskell/cabal-1.6"

src_prepare() {
	sed -e 's@hakyll >= 3.2.0.2 && < 3.4@hakyll >= 3.2.0.2 \&\& < 3.5@' \
		-e 's@hakyll    >= 3.2.0.3 && < 3.4@hakyll    >= 3.2.0.3 \&\& < 3.5@' \
		-i "${S}/${PN}.cabal" || die "Could not loosen dependencies"
}
