		>=dev-haskell/cabal-1.8
		test? ( dev-haskell/hunit[profile?]
			<dev-haskell/hspec-1.1[profile?]
		)"

src_prepare() {
	sed -e 's@hspec            >= 0.8     && < 0.10@hspec            >= 0.8     \&\& < 1.1@' \
		-i "${S}/${PN}.cabal" || die "Could not loosen dependencies"
}

