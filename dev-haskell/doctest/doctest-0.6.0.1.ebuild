			dev-haskell/hspec-shouldbe
			dev-haskell/transformers
			dev-haskell/stringbuilder
		)"

src_prepare() {
	cp -r "${FILESDIR}"/${P}/* "${S}"/ || die
}

src_configure() {
	cabal_src_configure $(use test && use_enable test tests) #395351
}
