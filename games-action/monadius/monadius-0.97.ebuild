		>=dev-haskell/cabal-1.6
		>=dev-haskell/glut-2.2 <dev-haskell/glut-2.4
		>=dev-haskell/opengl-2.4 <dev-haskell/opengl-2.6
		>=dev-lang/ghc-7.0.1"

S="${WORKDIR}/${MY_P}"

src_configure() {
	# WORKAROUND:
	# monadius fails to start (GLUT expects libGLU to linked into app)

	append-ldflags $(no-as-needed)
	cabal_src_configure
}
